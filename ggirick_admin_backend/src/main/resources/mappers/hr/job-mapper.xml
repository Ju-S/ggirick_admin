<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hr.job">
    <!-- 직급 목록 조회 ( 메타 데이터 조회용 ) -->
    <select id="getAllJobs" resultType="com.kedu.ggirick_admin_backend.dto.common.JobDTO">
        SELECT * FROM job
    </select>

    <!-- 직급 코드 -> 직급명 찾기 -->
    <select id="findJobName" resultType="String" parameterType="String">
        SELECT name FROM job WHERE UPPER(code) = UPPER(#{code, jdbcType=VARCHAR})
    </select>



    <!-- 올해 마지막 사번 조회 -->
    <select id="getLastEmployeeId" parameterType="String" resultType="String">
        SELECT MAX(id)
        FROM EMPLOYEE
        WHERE SUBSTR(id, 3, 2) = #{yearSuffix}
    </select>
</mapper>