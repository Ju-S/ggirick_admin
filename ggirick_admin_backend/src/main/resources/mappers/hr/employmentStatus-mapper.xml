<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="EmploymentStatus">
    <!-- 재직상태 목록 조회 ( 메타 데이터 조회용 ) -->
    <select id="getAllEmploymentStatuses" resultType="com.kedu.ggirick_admin_backend.dto.hr.EmploymentStatusCodeDTO">
        SELECT code, name
        FROM employment_status_code
        ORDER BY code
    </select>

    <!-- 선택한 직원 재직 상태 수정 - 한명 정보 한꺼번에 수정시 사용 -->
    <update id="updateEmploymentStatusById" parameterType="com.kedu.ggirick_admin_backend.dto.hr.EmployeeDTO">
        UPDATE employment_status
        SET
        employment_status = UPPER(#{status}),   <!-- 대문자 변환 -->
        reg_date = #{hireDate},
        change_date = SYSDATE
        WHERE emp_id = #{id}
    </update>

    <!-- 직원 한명 입사일 조회 -->
    <select id="getHireDateByEmployeeId" resultType="com.kedu.ggirick_admin_backend.dto.hr.EmploymentStatusDTO">
        SELECT reg_date FROM employment_status WHERE emp_id = #{employeeId}
    </select>

</mapper>