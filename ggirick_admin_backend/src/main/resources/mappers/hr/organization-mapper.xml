<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Organization">
    <!-- 조직 목록 조회 ( 메타 데이터 조회용 ) -->
    <select id="getAllOrganizations" resultType="com.kedu.ggirick_admin_backend.dto.hr.OrganizationDTO">
        SELECT * FROM organization
    </select>

    <!-- 조직 코드 -> 조직명 찾기 -->
    <select id="findOrganizationName" resultType="String" parameterType="String">
        SELECT name FROM organization WHERE UPPER(code) = UPPER(#{code, jdbcType=VARCHAR})
    </select>

    <!-- 선택한 직원 조직 수정 - 한명 정보 한꺼번에 수정시 사용 -->
    <update id="updateEmployeeOrganizationById" parameterType="com.kedu.ggirick_admin_backend.dto.hr.EmployeeDTO">
        UPDATE employee_organization
        SET organization_code = #{organizationCode}
        WHERE employee_id = #{id}
    </update>

    <!-- 조직 등록 -->
    <insert id="insertOrganization" parameterType="com.kedu.ggirick_admin_backend.dto.hr.OrganizationDTO">
        INSERT INTO ORGANIZATION (CODE, NAME)
        VALUES (#{code}, #{name})
    </insert>

    <!-- 조직 수정 -->
    <update id="updateOrganizationNameByCode" parameterType="com.kedu.ggirick_admin_backend.dto.hr.OrganizationDTO">
        UPDATE ORGANIZATION
        SET NAME = #{name}
        WHERE CODE = #{code}
    </update>

    <!-- 조직 삭제 -->
    <delete id="deleteOrganizationByCode" parameterType="string">
        DELETE FROM ORGANIZATION
        WHERE CODE = #{code}
    </delete>

    <!-- 조직 코드 중복 확인 -->
    <select id="checkDuplicateOrganizationCode" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM ORGANIZATION
        WHERE UPPER(CODE) = UPPER(#{code})
    </select>
</mapper>