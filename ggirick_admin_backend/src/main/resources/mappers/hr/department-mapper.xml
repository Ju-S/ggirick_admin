<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hr.department">
    <!-- 부서 목록 조회 ( 메타 데이터 조회용 ) -->
    <select id="getAllDepartments" resultType="com.kedu.ggirick_admin_backend.dto.common.DepartmentDTO">
        SELECT * FROM department
    </select>

    <!-- 부서 코드 -> 부서명 찾기 -->
    <select id="findDepartmentName" resultType="String" parameterType="String">
        SELECT name FROM department WHERE UPPER(code) = UPPER(#{code, jdbcType=VARCHAR})
    </select>
</mapper>