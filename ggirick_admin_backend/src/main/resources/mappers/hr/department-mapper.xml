<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Department">
    <!-- 부서 목록 조회 ( 메타 데이터 조회용 ) -->
    <select id="getAllDepartments" resultType="com.kedu.ggirick_admin_backend.dto.hr.DepartmentDTO">
        SELECT * FROM department
    </select>

    <!-- 부서 코드 -> 부서명 찾기 -->
    <select id="findDepartmentName" resultType="String" parameterType="String">
        SELECT name FROM department WHERE UPPER(code) = UPPER(#{code, jdbcType=VARCHAR})
    </select>

    <!-- 선택한 직원 부서 수정 - 한명 정보 한꺼번에 수정시 사용 -->
    <update id="updateEmployeeDepartmentById" parameterType="com.kedu.ggirick_admin_backend.dto.hr.EmployeeDTO">
        UPDATE employee_department
        SET department_code = #{departmentCode}
        WHERE employee_id = #{id}
    </update>

    <!-- 코드 중복 확인 -->
    <select id="checkDuplicateDepartmentCode" parameterType="string" resultType="int">
        SELECT COUNT(*)
        FROM DEPARTMENT
        WHERE UPPER(CODE) = UPPER(#{code})
    </select>

    <!-- 부서 등록 -->
    <insert id="insertDepartment" parameterType="com.kedu.ggirick_admin_backend.dto.hr.DepartmentDTO">
        INSERT INTO DEPARTMENT (CODE, NAME)
        VALUES (#{code}, #{name})
    </insert>

    <!-- 부서 수정 -->
    <update id="updateDepNameByCode" parameterType="com.kedu.ggirick_admin_backend.dto.hr.DepartmentDTO">
        UPDATE DEPARTMENT
        SET NAME = #{name}
        WHERE CODE = #{code}
    </update>

    <!-- 부서 삭제 -->
    <delete id="deleteDepartmentByCode" parameterType="string">
        DELETE FROM DEPARTMENT
        WHERE CODE = #{code}
    </delete>

</mapper>